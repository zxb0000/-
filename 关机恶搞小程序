#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
#include<string.h>
int main() {
    char arr[] = { 0 };
    system("shutdown -s -t 60");
while(1){
    printf("你的电脑将在60秒后关机！\n请输入“我是猪”取消！\n请输入:");
    scanf("%s", arr);
    if (strcmp(arr, "我是猪") == 0) {
        system("shutdown -a");
        printf("这样就对了嘛！:>");
        break;
    }
    }
}
